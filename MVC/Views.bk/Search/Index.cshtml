@{
    ViewBag.Title = "Index";
    System.Data.DataTable dtResult=null;
    if(ViewBag.SearchResult!=null)
    {
        dtResult=(System.Data.DataTable) ViewBag.SearchResult;
    }
}

<h2>@Resources.SiteText.Search</h2>




<div class="row" style="direction:ltr;margin-bottom:30px;">
    <form method="get" role="search" action="/Search/Index" id="frmSearch">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    @*<button id="btnSearch" class="btn btn-default btn-primary" type="button">@Resources.SiteText.Search</button>*@
                    <input type="submit" class="btn btn-default btn-primary" value="@Resources.SiteText.Search">
                </span>
                <input type="text" id="s" name="s" class="form-control" value="@ViewBag.S" placeholder="@Resources.SiteText.SearchForPlaceHolder">
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </form>
        <!-- /.col-lg-6 -->
</div><!-- /.row -->
<div class="row">
        <div class="col-lg-12">
        </div><!-- /.col-lg-6 -->
    <!-- /.col-lg-6 -->
</div><!-- /.row -->
@if(dtResult!=null && dtResult.Rows.Count>0)
{ 
<div class="vc_row wpb_row row">
    <div class="col-md-12">
        <table class="table table-bordered" style="color: #000;">
            @*<thead>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                </tr>
            </thead>*@
            <tbody>
                @foreach (System.Data.DataRow dr in dtResult.Rows)
                {
                    <tr>
                        <td>@(dr["No"].ToString())</td>
                        <td><b>@(dr["Name"].ToString())</b></td>
                        <td><b>@(dr["Title"].ToString())</b></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
}
else if (!string.IsNullOrEmpty(ViewBag.S))
{
    <div class="alert alert-error">@Resources.AdminText.ThereIsNoData<span class="close"></span></div>

}
<script>
    jQuery(document).ready(function () {

        jQuery("#btnSearch").click(function () {
    
            jQuery("#frmSearch").submit();
    
    });
    });
</script>