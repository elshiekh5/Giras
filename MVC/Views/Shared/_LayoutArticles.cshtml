@using DCCMSNameSpace;
@{
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<section ID="inner">
    <div class="container">
        <div class="row">

            <div class="col-md-9">
                @RenderBody()
            </div>

            <div class="col-md-3">
                <div class="questions">
                    <img src="~/Content/images/question.png" alt="" />
                    <div class="question-form">
                        <form role="form">
                            <input type="text" class="form-control" placeholder="اسمك">
                            <input type="email" class="form-control" placeholder="ايميلك">
                            <textarea class="form-control" placeholder="سؤالك"></textarea>
                            <button type="submit" class="btn btn-default">ارسل لنا سؤالك</button>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
